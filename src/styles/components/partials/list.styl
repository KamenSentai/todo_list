.container_card.page_app

    // List
    .list
        position relative
        width 100%
        height 87.5%
        padding 1em 0 0 0
        overflow-y scroll
        .push
            width 100%
            height calc(100% - 2.5em)

    // Gradients
    .gradient
        position absolute
        width 100%
        left 0
        &.top
            height 1em
            top 12.5%
            background linear-gradient($color-black, rgba(0, 0, 0, 0))
        &.bottom
            height 2.5em
            bottom 0
            background linear-gradient(rgba(0, 0, 0, 0), $color-black)
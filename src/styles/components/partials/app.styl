// App page
.container_card.page_app
    .title
        font-family $font-hmt
        font-size 2.5em

    // Header
    .menu_header
        display table
        position relative
        width 100%
        li
            display table-cell
            position relative
            &:first-child
                width 87.5%
            &:last-child
                width 12.5%
            a
                display inline-block
                &.button_signout
                    position absolute
                    right 0
                    top calc(50% - 0.5em)
                    transition color 0.25s ease-out
                    &:hover
                        color $color-blue

    // App
    .app
        display flex
        flex-flow column
        position relative
        width 100%
        height 100%
        overflow hidden

        // Menu
        .menu
            display table
            flex 0 1 auto
            position relative
            width 100%
            margin-bottom 1em
            border-bottom 0.125rem solid darken($color-black, 2.5)
            li
                display table-cell
                width (100% / $number-ranges)
                a
                    display block
                    padding 1em 0
                    font-weight 300
                    text-align center
                    &.active
                        font-weight 700
                &.slide_bar,
                &.nav_bar
                    position absolute
                    size((100% / $number-ranges), 100%)
                    position-absolute(0, 0)
                    border-bottom 0.25em solid $color-blue
                    transform translateX(0)
                    composites(0, ease-out, 0, ease-out)
                    opacity 0
                    animation opacity-toggle 0.25s forwards 0.25s
                    z-index -1
                    &.active
                        composites(0.25s, ease-out, 0.25s, ease-out)

        // Ranges
        .ranges
            flex 1 1 auto
            position relative
            width 100%
            transform translateX(0)
            composites(0, ease-out, 0, ease-out)
            animation opacity-toggle 0.5s
            &.active
                composites(1s, ease-out, 1s, ease-out)
            .content
                position absolute
                top 0
                width 100%
                height 100%
                for n in (1..4)
                    &:nth-child({n})
                        left ((n - 1) * 100)%
                opacity 0
                composite(opacity, 0.25s, ease-out)
                &.active
                    opacity 1
                .main
                    position relative
                    width 100%
                    height 75%
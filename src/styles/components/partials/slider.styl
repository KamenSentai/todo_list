.content
    // Slider
    .slider
        display flex
        flex-direction row
        width 100%
        height 20%
        .arrow,
        .date
            display flex
            margin auto
        // Arrows
        .arrow
            width 25%
            height 100%
            user-select none
            a
                margin-top auto
                margin-bottom auto
                transform scale(1.875, 2.5)
                opacity 0.5
                composites(0.25s, ease-out, 0.25s, ease-out)
                &:hover
                    opacity 1
            &.left a
                transform-origin 100% 50%
                margin-left auto
                &:hover
                    transform scale(1.875, 2.5) translateX(-25%)
            &.right a
                transform-origin 0 50%
                margin-right auto
                &:hover
                    transform scale(1.875, 2.5) translateX(25%)
        // Date
        .date
            display flex
            flex-direction column
            width 50%
            height 100%
            font-size 1.875em
            font-weight 700
            span
                margin auto
                text-align center
                &.complete
                    font-size 0.5em
                    font-weight 300
                    opacity 0.5
                &.smaller
                    font-size 0.5em
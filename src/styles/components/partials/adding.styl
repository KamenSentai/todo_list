.container_card.page_app

    // Adding area
    .box_adding
        position absolute
        left 0
        top 0
        width 100%
        height 12.5%
        background-color darken($color-black, 2.5)
        border 0.0625rem solid darken($color-black, 5)
        border-radius $size-card-pctavg
        transition height 0.25s ease-out
        cursor pointer
        &:hover + .opening_adding .indicator:not(.active)
            opacity 1
        &.active
            height 100%
            cursor default

    // Button
    .opening_adding
        display flex
        flex-direction row
        width 100%
        height 12.5%
        padding 0 1.25em
        .indicator,
        .cross
            cursor pointer
        .indicator
            margin auto 0
            transform translateY(0)
            opacity 0.5
            composites(0.25s, ease-out, 0.25s, ease-out)
            &:hover
                opacity 1
            &.active
                transform translateY(12.5%)
                opacity 0
                cursor default
            i
                margin-right 1em
        .cross
            margin auto 0 auto auto
            opacity 0
            composite(opacity, 0.25s, ease-out)
            user-select none
            &.active
                opacity 0.25
                &:hover
                    opacity 1

    // From
    .form
        display none
        position absolute
        left 0
        bottom 0
        width 100%
        height 87.5%
        padding 0.625em 1.25em 2.5em 1.25em
        font-weight 300
        opacity 0
        transform translateY(-6.25%)
        composites(0.25s, ease-out, 0.25s, ease-out)
        &.active
            opacity 1
            transform none
            input[type="submit"]
                opacity 0.25
        form
            // Priority
            .row.radio
                display flex
                flex-direction row
                composite(opacity, 0.25s, ease-out)
                &:hover
                    opacity 1
                > span
                    position relative
                    margin 0 auto
                    &:first-child
                        margin-left 0
                    &.section,
                    label.text
                        opacity 0.5
                        composite(opacity, 0.125s, ease-out)
                    label.checkmark
                        position absolute
                        width 1em
                        height 1em
                        left 0
                        top 0
                        background-color lighten($color-black, 25)
                        border 0.0625rem solid darken($color-black, 5)
                        border-radius 50%
                        cursor pointer
                        &::after
                            pseudo-element()
                            border 0.0625rem solid darken($color-black, 5)
                            border-radius 50%
                            opacity 0
                            composite(opacity, 0.125s, ease-out)
                        &[for^="low"]::after
                            background-color $color-green
                        &[for^="medium"]::after
                            background-color $color-orange
                        &[for^="high"]::after
                            background-color $color-red
                input[type="radio"]
                    opacity 0
                    ~ label
                        cursor pointer
                    &:checked ~ .checkmark::after,
                    &:checked ~ label.text
                        opacity 1
            // Date
            .row.number
                margin 2.5em 0
                .section
                    margin-bottom 0.5em
                    opacity 0.25
                .inputs
                    width 100%
                    input[type="number"]
                        width 25%
                        padding 0.5em
                        float left
                        background-color lighten($color-black, 5)
                        border 0.0625rem solid darken($color-black, 10)
                        text-align center
                        opacity 0.25
                        composite(opacity, 0.25s, ease-out)
                        &:focus
                            opacity 1
                        &:first-child
                            border-top-left-radius $size-card-pctavg
                            border-bottom-left-radius $size-card-pctavg
                        &:last-child
                            border-top-right-radius $size-card-pctavg
                            border-bottom-right-radius $size-card-pctavg
                            width 50%
            // Submit
            input[type="submit"]
                position absolute
                right 1.25em
                bottom 0
                opacity 0
                composite(opacity, 0.25s, ease-out)
                &:hover
                    opacity 1